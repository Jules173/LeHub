<Window x:Class="LeHub.Views.DeleteProjectDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Supprimer le projet"
        Width="450"
        Height="280"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundDarkBrush}">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   x:Name="TitleText"
                   Text="Supprimer le projet ?"
                   Style="{StaticResource TitleText}"
                   Margin="0,0,0,16"/>

        <!-- Description -->
        <TextBlock Grid.Row="1"
                   x:Name="DescriptionText"
                   Text="Ce projet a une application associee dans le Hub."
                   Foreground="{StaticResource TextSecondaryBrush}"
                   TextWrapping="Wrap"
                   Margin="0,0,0,16"/>

        <!-- Options -->
        <StackPanel Grid.Row="2">
            <RadioButton x:Name="DeleteBothOption"
                         Content="Supprimer le projet ET l'application associee"
                         Foreground="{StaticResource TextPrimaryBrush}"
                         Margin="0,0,0,8"
                         GroupName="DeleteOption"
                         IsChecked="True"/>
            <RadioButton x:Name="KeepAppOption"
                         Content="Supprimer le projet mais garder l'application"
                         Foreground="{StaticResource TextPrimaryBrush}"
                         Margin="0,0,0,8"
                         GroupName="DeleteOption"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button Content="Annuler"
                    Style="{StaticResource ButtonBase}"
                    Width="100"
                    Margin="0,0,12,0"
                    Click="CancelButton_Click"/>
            <Button Content="Supprimer"
                    Style="{StaticResource DangerButton}"
                    Width="100"
                    Click="DeleteButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
