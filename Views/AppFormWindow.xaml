<Window x:Class="LeHub.Views.AppFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ajouter une application"
        Width="500"
        Height="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundDarkBrush}">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   x:Name="FormTitle"
                   Text="Ajouter une application"
                   Style="{StaticResource TitleText}"
                   Margin="0,0,0,20"/>

        <!-- Name -->
        <StackPanel Grid.Row="1" Margin="0,0,0,12">
            <TextBlock Text="Nom"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       Margin="0,0,0,6"/>
            <TextBox x:Name="NameTextBox"
                     Style="{StaticResource SearchTextBox}"
                     Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <!-- Path -->
        <StackPanel Grid.Row="2" Margin="0,0,0,12">
            <TextBlock Text="Chemin de l'executable"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       Margin="0,0,0,6"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="PathTextBox"
                         Grid.Column="0"
                         Style="{StaticResource SearchTextBox}"
                         Text="{Binding ExePath, UpdateSourceTrigger=PropertyChanged}"/>
                <Button Grid.Column="1"
                        Content="Parcourir..."
                        Style="{StaticResource ButtonBase}"
                        Margin="8,0,0,0"
                        Click="BrowseButton_Click"/>
            </Grid>
        </StackPanel>

        <!-- Arguments -->
        <StackPanel Grid.Row="3" Margin="0,0,0,12">
            <TextBlock Text="Arguments (optionnel)"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       Margin="0,0,0,6"/>
            <TextBox x:Name="ArgsTextBox"
                     Style="{StaticResource SearchTextBox}"
                     Text="{Binding Arguments, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <!-- Tags Multi-Select -->
        <StackPanel Grid.Row="4" Margin="0,0,0,12">
            <Grid Margin="0,0,0,6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Tags"
                           Foreground="{StaticResource TextSecondaryBrush}"/>
                <Button Grid.Column="1"
                        Content="+ Nouveau tag"
                        Style="{StaticResource ButtonBase}"
                        Padding="8,4"
                        FontSize="11"
                        Click="AddTagButton_Click"/>
            </Grid>
            <!-- Search tags -->
            <Grid Margin="0,0,0,6">
                <TextBox x:Name="TagSearchBox"
                         Style="{StaticResource SearchTextBox}"
                         Text="{Binding TagSearchText, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Text="Rechercher un tag..."
                           Foreground="{StaticResource TextSecondaryBrush}"
                           VerticalAlignment="Center"
                           Margin="12,0,0,0"
                           IsHitTestVisible="False">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=TagSearchBox}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="120">
                <ItemsControl ItemsSource="{Binding FilteredTags}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsSelected}"
                                      Margin="0,2">
                                <TextBlock Text="{Binding Name}" Foreground="{StaticResource TextPrimaryBrush}"/>
                            </CheckBox>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="5"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,12,0,0">
            <Button Content="Annuler"
                    Style="{StaticResource ButtonBase}"
                    Width="100"
                    Margin="0,0,12,0"
                    Click="CancelButton_Click"/>
            <Button x:Name="SaveButton"
                    Content="Enregistrer"
                    Style="{StaticResource PrimaryButton}"
                    Width="120"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
