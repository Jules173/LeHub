<Window x:Class="LeHub.Views.TagsManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gerer les tags"
        Width="400"
        Height="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundDarkBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="Gerer les tags"
                   Style="{StaticResource TitleText}"
                   Margin="0,0,0,16"/>

        <!-- Add new tag -->
        <Grid Grid.Row="1" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="NewTagTextBox"
                     Grid.Column="0"
                     Style="{StaticResource SearchTextBox}"
                     Text="{Binding NewTagName, UpdateSourceTrigger=PropertyChanged}"
                     KeyDown="NewTagTextBox_KeyDown"/>
            <Button Grid.Column="1"
                    Content="+ Ajouter"
                    Style="{StaticResource PrimaryButton}"
                    Margin="8,0,0,0"
                    Padding="12,6"
                    Click="AddTagButton_Click"/>
        </Grid>

        <!-- Tags list -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Tags}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{StaticResource CardBackgroundBrush}"
                                CornerRadius="4"
                                Padding="12,8"
                                Margin="0,0,0,6">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="{Binding Name}"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           VerticalAlignment="Center"/>

                                <Button Grid.Column="1"
                                        Content="Renommer"
                                        Style="{StaticResource SmallButton}"
                                        Padding="8,4"
                                        Margin="0,0,6,0"
                                        Click="RenameTagButton_Click"
                                        Tag="{Binding}"/>

                                <Button Grid.Column="2"
                                        Style="{StaticResource DangerButton}"
                                        Padding="8,4"
                                        Click="DeleteTagButton_Click"
                                        Tag="{Binding}">
                                    <Path Data="M3,4 L3,14 L11,14 L11,4 M1,4 L13,4 M5,2 L9,2 M5,6 L5,12 M9,6 L9,12"
                                          Stroke="{StaticResource AccentRedBrush}"
                                          StrokeThickness="1.2"
                                          Width="14" Height="14"
                                          Stretch="Uniform"/>
                                </Button>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Close button -->
        <Button Grid.Row="3"
                Content="Fermer"
                Style="{StaticResource ButtonBase}"
                Width="100"
                HorizontalAlignment="Right"
                Margin="0,12,0,0"
                Click="CloseButton_Click"/>
    </Grid>
</Window>
