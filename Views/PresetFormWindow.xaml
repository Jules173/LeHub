<Window x:Class="LeHub.Views.PresetFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Creer un preset"
        Width="500"
        Height="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundDarkBrush}">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="Creer un preset"
                   Style="{StaticResource TitleText}"
                   Margin="0,0,0,20"/>

        <!-- Name -->
        <StackPanel Grid.Row="1" Margin="0,0,0,12">
            <TextBlock Text="Nom du preset"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       Margin="0,0,0,6"/>
            <TextBox x:Name="NameTextBox"
                     Style="{StaticResource SearchTextBox}"
                     Text="{Binding PresetName, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <!-- Delay -->
        <StackPanel Grid.Row="2" Margin="0,0,0,12">
            <TextBlock Text="Delai entre les apps (ms)"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       Margin="0,0,0,6"/>
            <TextBox x:Name="DelayTextBox"
                     Style="{StaticResource SearchTextBox}"
                     Text="{Binding DelayMs, UpdateSourceTrigger=PropertyChanged}"
                     Width="100"
                     HorizontalAlignment="Left"/>
        </StackPanel>

        <!-- Apps List -->
        <StackPanel Grid.Row="3" Margin="0,0,0,12">
            <TextBlock Text="Applications (cocher pour inclure)"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       Margin="0,0,0,6"/>
            <!-- Search Box -->
            <Grid Margin="0,0,0,8">
                <TextBox x:Name="SearchBox"
                         Style="{StaticResource SearchTextBox}"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Text="Rechercher..."
                           Foreground="{StaticResource TextSecondaryBrush}"
                           VerticalAlignment="Center"
                           Margin="12,0,0,0"
                           IsHitTestVisible="False">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding Text, ElementName=SearchBox}" Value=""/>
                                        <Condition Binding="{Binding IsFocused, ElementName=SearchBox}" Value="False"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Visibility" Value="Visible"/>
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="180">
                <ItemsControl ItemsSource="{Binding FilteredApps}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsSelected}"
                                      Margin="0,4">
                                <CheckBox.Style>
                                    <Style TargetType="CheckBox">
                                        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                                    </Style>
                                </CheckBox.Style>
                                <TextBlock Text="{Binding Name}" Foreground="{StaticResource TextPrimaryBrush}"/>
                            </CheckBox>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,12,0,0">
            <Button Content="Annuler"
                    Style="{StaticResource ButtonBase}"
                    Width="100"
                    Margin="0,0,12,0"
                    Click="CancelButton_Click"/>
            <Button Content="Creer"
                    Style="{StaticResource PrimaryButton}"
                    Width="120"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
