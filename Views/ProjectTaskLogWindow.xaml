<Window x:Class="LeHub.Views.ProjectTaskLogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tache en cours"
        Width="700"
        Height="500"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundDarkBrush}">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock x:Name="TaskTitle"
                           Text="Build"
                           Style="{StaticResource TitleText}"
                           FontSize="18"/>
                <TextBlock x:Name="ProjectName"
                           Text="MonProjet"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           FontSize="12"/>
            </StackPanel>

            <!-- Status Badge -->
            <Border x:Name="StatusBadge"
                    Grid.Column="1"
                    Background="{StaticResource AccentBlueBrush}"
                    CornerRadius="4"
                    Padding="12,6"
                    VerticalAlignment="Center">
                <TextBlock x:Name="StatusText"
                           Text="En cours..."
                           Foreground="White"
                           FontWeight="SemiBold"
                           FontSize="12"/>
            </Border>
        </Grid>

        <!-- Log Output -->
        <Border Grid.Row="1"
                Background="{StaticResource BackgroundMediumBrush}"
                BorderBrush="{StaticResource BorderSubtleBrush}"
                BorderThickness="1"
                CornerRadius="4">
            <ScrollViewer x:Name="LogScrollViewer"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Auto">
                <TextBox x:Name="LogTextBox"
                         IsReadOnly="True"
                         FontFamily="Consolas"
                         FontSize="12"
                         Foreground="{StaticResource TextPrimaryBrush}"
                         Background="Transparent"
                         BorderThickness="0"
                         Padding="12"
                         TextWrapping="NoWrap"
                         VerticalScrollBarVisibility="Disabled"
                         HorizontalScrollBarVisibility="Disabled"/>
            </ScrollViewer>
        </Border>

        <!-- Footer Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,12,0,0">
            <Button x:Name="CancelButton"
                    Content="Annuler"
                    Style="{StaticResource DangerButton}"
                    Width="100"
                    Margin="0,0,12,0"
                    Click="CancelButton_Click"/>
            <Button x:Name="CloseButton"
                    Content="Fermer"
                    Style="{StaticResource ButtonBase}"
                    Width="100"
                    Click="CloseButton_Click"
                    IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>
