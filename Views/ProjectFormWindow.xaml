<Window x:Class="LeHub.Views.ProjectFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nouveau projet"
        Width="520"
        Height="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundDarkBrush}">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   x:Name="FormTitle"
                   Text="Nouveau projet"
                   Style="{StaticResource TitleText}"
                   Margin="0,0,0,20"/>

        <!-- Name -->
        <StackPanel Grid.Row="1" Margin="0,0,0,12">
            <TextBlock Text="Nom du projet"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       Margin="0,0,0,6"/>
            <TextBox x:Name="NameTextBox"
                     Style="{StaticResource SearchTextBox}"/>
        </StackPanel>

        <!-- Parent Folder -->
        <StackPanel Grid.Row="2" Margin="0,0,0,12">
            <TextBlock Text="Dossier parent"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       Margin="0,0,0,6"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="FolderTextBox"
                         Grid.Column="0"
                         Style="{StaticResource SearchTextBox}"
                         IsReadOnly="True"/>
                <Button Grid.Column="1"
                        Content="Parcourir..."
                        Style="{StaticResource ButtonBase}"
                        Margin="8,0,0,0"
                        Click="BrowseFolderButton_Click"/>
            </Grid>
        </StackPanel>

        <!-- Project Type -->
        <StackPanel Grid.Row="3" Margin="0,0,0,12">
            <TextBlock Text="Type de projet"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       Margin="0,0,0,6"/>
            <ComboBox x:Name="TypeComboBox"
                      SelectionChanged="TypeComboBox_SelectionChanged"/>
        </StackPanel>

        <!-- Framework -->
        <StackPanel Grid.Row="4" Margin="0,0,0,12">
            <TextBlock Text="Framework / Template"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       Margin="0,0,0,6"/>
            <ComboBox x:Name="FrameworkComboBox"
                      DisplayMemberPath="DisplayName"/>
        </StackPanel>

        <!-- Tags Multi-Select -->
        <StackPanel Grid.Row="5" Margin="0,0,0,12">
            <TextBlock Text="Tags (optionnel)"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       Margin="0,0,0,6"/>
            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="100">
                <ItemsControl x:Name="TagsItemsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsSelected}"
                                      Margin="0,2">
                                <TextBlock Text="{Binding Name}" Foreground="{StaticResource TextPrimaryBrush}"/>
                            </CheckBox>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </StackPanel>

        <!-- Tool Warnings -->
        <Border Grid.Row="6"
                x:Name="WarningBorder"
                Background="#3d2020"
                BorderBrush="{StaticResource AccentRedBrush}"
                BorderThickness="1"
                CornerRadius="4"
                Padding="12,8"
                Margin="0,0,0,12"
                Visibility="Collapsed">
            <StackPanel>
                <TextBlock Text="Outils requis non installes:"
                           Foreground="{StaticResource AccentRedBrush}"
                           FontWeight="SemiBold"
                           Margin="0,0,0,4"/>
                <TextBlock x:Name="WarningText"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="7"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,12,0,0">
            <Button Content="Annuler"
                    Style="{StaticResource ButtonBase}"
                    Width="100"
                    Margin="0,0,12,0"
                    Click="CancelButton_Click"/>
            <Button x:Name="CreateButton"
                    Content="Creer"
                    Style="{StaticResource PrimaryButton}"
                    Width="120"
                    Click="CreateButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
