<Window x:Class="LeHub.Views.PresetEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Modifier le preset"
        Width="550"
        Height="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundDarkBrush}">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="Modifier le preset"
                   Style="{StaticResource TitleText}"
                   Margin="0,0,0,20"/>

        <!-- Name -->
        <StackPanel Grid.Row="1" Margin="0,0,0,12">
            <TextBlock Text="Nom du preset"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       Margin="0,0,0,6"/>
            <TextBox x:Name="NameTextBox"
                     Style="{StaticResource SearchTextBox}"/>
        </StackPanel>

        <!-- Delay -->
        <StackPanel Grid.Row="2" Margin="0,0,0,16">
            <TextBlock Text="Delai entre les apps (ms)"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       Margin="0,0,0,6"/>
            <TextBox x:Name="DelayTextBox"
                     Style="{StaticResource SearchTextBox}"
                     Width="100"
                     HorizontalAlignment="Left"/>
        </StackPanel>

        <!-- Selected Apps (with ordering) -->
        <StackPanel Grid.Row="3" Margin="0,0,0,8">
            <TextBlock Text="Applications incluses (ordre d'execution)"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       Margin="0,0,0,6"/>
            <Border Background="{StaticResource BackgroundMediumBrush}"
                    BorderBrush="{StaticResource BorderSubtleBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    MaxHeight="160">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="SelectedAppsControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="8,6"
                                        BorderBrush="{StaticResource BorderSubtleBrush}"
                                        BorderThickness="0,0,0,1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="28"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Order Badge -->
                                        <Border Grid.Column="0"
                                                Background="{StaticResource AccentBlueBrush}"
                                                CornerRadius="10"
                                                Width="20" Height="20">
                                            <TextBlock Text="{Binding OrderDisplay}"
                                                       Foreground="White"
                                                       FontSize="10"
                                                       FontWeight="Bold"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                        </Border>

                                        <!-- App Name -->
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding Name}"
                                                   Foreground="{StaticResource TextPrimaryBrush}"
                                                   VerticalAlignment="Center"
                                                   TextTrimming="CharacterEllipsis"/>

                                        <!-- Actions -->
                                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                                            <Button Content="^"
                                                    Style="{StaticResource SmallButton}"
                                                    Width="24" Height="24"
                                                    FontSize="12"
                                                    Margin="0,0,4,0"
                                                    ToolTip="Monter"
                                                    Click="MoveUpButton_Click"
                                                    Tag="{Binding}"/>
                                            <Button Content="v"
                                                    Style="{StaticResource SmallButton}"
                                                    Width="24" Height="24"
                                                    FontSize="12"
                                                    Margin="0,0,4,0"
                                                    ToolTip="Descendre"
                                                    Click="MoveDownButton_Click"
                                                    Tag="{Binding}"/>
                                            <Button Content="x"
                                                    Style="{StaticResource SmallButton}"
                                                    Width="24" Height="24"
                                                    FontSize="12"
                                                    Foreground="{StaticResource AccentRedBrush}"
                                                    ToolTip="Retirer"
                                                    Click="RemoveAppButton_Click"
                                                    Tag="{Binding}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>
        </StackPanel>

        <!-- Available Apps to Add -->
        <StackPanel Grid.Row="4" Margin="0,0,0,12">
            <TextBlock Text="Ajouter une application"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       Margin="0,0,0,6"/>
            <!-- Search Box -->
            <Grid Margin="0,0,0,8">
                <TextBox x:Name="SearchBox"
                         Style="{StaticResource SearchTextBox}"
                         TextChanged="SearchBox_TextChanged"/>
                <TextBlock Text="Rechercher..."
                           Foreground="{StaticResource TextSecondaryBrush}"
                           VerticalAlignment="Center"
                           Margin="12,0,0,0"
                           IsHitTestVisible="False">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding Text, ElementName=SearchBox}" Value=""/>
                                        <Condition Binding="{Binding IsFocused, ElementName=SearchBox}" Value="False"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Visibility" Value="Visible"/>
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
            <Border Background="{StaticResource BackgroundMediumBrush}"
                    BorderBrush="{StaticResource BorderSubtleBrush}"
                    BorderThickness="1"
                    CornerRadius="4">
                <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="140">
                    <ItemsControl x:Name="AvailableAppsControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="8,6"
                                        BorderBrush="{StaticResource BorderSubtleBrush}"
                                        BorderThickness="0,0,0,1"
                                        Cursor="Hand"
                                        MouseLeftButtonUp="AvailableApp_Click"
                                        Tag="{Binding}">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="{StaticResource CardHoverBrush}"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="{Binding Name}"
                                                   Foreground="{StaticResource TextPrimaryBrush}"
                                                   VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1"
                                                   Text="+ Ajouter"
                                                   Foreground="{StaticResource AccentGreenBrush}"
                                                   FontSize="11"
                                                   VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="5"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,12,0,0">
            <Button Content="Annuler"
                    Style="{StaticResource ButtonBase}"
                    Width="100"
                    Margin="0,0,12,0"
                    Click="CancelButton_Click"/>
            <Button Content="Enregistrer"
                    Style="{StaticResource PrimaryButton}"
                    Width="120"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
