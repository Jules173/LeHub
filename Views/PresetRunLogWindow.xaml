<Window x:Class="LeHub.Views.PresetRunLogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:LeHub.Converters"
        Title="Execution du preset"
        Width="500"
        Height="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinWidth="400"
        MinHeight="300"
        Background="{StaticResource BackgroundDarkBrush}">

    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock x:Name="PresetNameText"
                       Text="Preset"
                       Style="{StaticResource TitleText}"
                       Margin="0,0,0,4"/>
            <TextBlock x:Name="StatusText"
                       Text="En cours..."
                       Foreground="{StaticResource TextSecondaryBrush}"
                       FontSize="12"/>
        </StackPanel>

        <!-- Progress -->
        <StackPanel Grid.Row="1" Margin="0,0,0,16">
            <ProgressBar x:Name="ProgressBar"
                         Height="6"
                         Background="{StaticResource BackgroundMediumBrush}"
                         Foreground="{StaticResource AccentBlueBrush}"
                         BorderThickness="0"
                         Minimum="0"
                         Maximum="100"
                         Value="0"/>
            <TextBlock x:Name="ProgressText"
                       Text="0/0 applications"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       FontSize="11"
                       HorizontalAlignment="Right"
                       Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Log -->
        <Border Grid.Row="2"
                Background="{StaticResource BackgroundMediumBrush}"
                BorderBrush="{StaticResource BorderSubtleBrush}"
                BorderThickness="1"
                CornerRadius="4"
                Margin="0,0,0,16">
            <ScrollViewer x:Name="LogScrollViewer"
                          VerticalScrollBarVisibility="Auto"
                          Padding="12">
                <TextBlock x:Name="LogText"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           FontFamily="Consolas"
                           FontSize="11"
                           TextWrapping="Wrap"/>
            </ScrollViewer>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button x:Name="StopButton"
                    Content="Arreter"
                    Style="{StaticResource DangerButton}"
                    Padding="16,8"
                    Margin="0,0,12,0"
                    Click="StopButton_Click"/>
            <Button x:Name="CloseButton"
                    Content="Fermer"
                    Style="{StaticResource ButtonBase}"
                    Padding="16,8"
                    Click="CloseButton_Click"
                    IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>
