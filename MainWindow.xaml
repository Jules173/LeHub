<Window x:Class="LeHub.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:LeHub.ViewModels"
        xmlns:converters="clr-namespace:LeHub.Converters"
        mc:Ignorable="d"
        Title="LeHub"
        Height="700"
        Width="1100"
        MinHeight="500"
        MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundDarkBrush}"
        KeyDown="Window_KeyDown"
        AllowDrop="True"
        Drop="Window_Drop"
        DragOver="Window_DragOver">

    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:StringNotEmptyToVisibilityConverter x:Key="StringNotEmptyToVisibility"/>
        <converters:BoolToStarConverter x:Key="BoolToStar"/>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0"
                Background="{StaticResource BackgroundMediumBrush}"
                BorderBrush="{StaticResource BorderSubtleBrush}"
                BorderThickness="0,0,1,0">
            <DockPanel Margin="12">
                <!-- Logo/Title -->
                <StackPanel DockPanel.Dock="Top" Margin="0,0,0,24">
                    <TextBlock Text="LeHub"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                    <TextBlock Text="Application Launcher"
                               Style="{StaticResource SubtitleText}"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Sidebar Actions -->
                <StackPanel DockPanel.Dock="Top">
                    <Button Content="+ Ajouter une appli"
                            Style="{StaticResource SidebarButton}"
                            Command="{Binding AddAppCommand}"/>
                    <Button Content="Gerer les tags"
                            Style="{StaticResource SidebarButton}"
                            Command="{Binding ManageTagsCommand}"/>

                    <Separator Background="{StaticResource BorderSubtleBrush}" Margin="0,12"/>

                    <!-- Presets Section -->
                    <TextBlock Text="PRESETS"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="10"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>
                    <Button Content="+ Nouveau preset"
                            Style="{StaticResource SidebarButton}"
                            Command="{Binding AddPresetCommand}"/>

                    <ItemsControl ItemsSource="{Binding Presets}" Margin="0,8,0,0">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="Transparent"
                                        CornerRadius="4"
                                        Margin="0,2"
                                        Padding="8,6">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Name}"
                                                       Foreground="{StaticResource TextPrimaryBrush}"
                                                       FontSize="12"/>
                                            <TextBlock Text="{Binding AppsDisplay}"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       FontSize="10"
                                                       TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>
                                        <Button Grid.Column="1"
                                                Content="â–¶"
                                                FontSize="10"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Foreground="{StaticResource AccentGreenBrush}"
                                                Cursor="Hand"
                                                Padding="6,2"
                                                ToolTip="Lancer le preset"
                                                Command="{Binding DataContext.LaunchPresetCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"/>
                                        <Button Grid.Column="2"
                                                Content="x"
                                                FontSize="12"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Foreground="{StaticResource AccentRedBrush}"
                                                Cursor="Hand"
                                                Padding="6,2"
                                                ToolTip="Supprimer"
                                                Command="{Binding DataContext.DeletePresetCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <!-- Version -->
                <StackPanel DockPanel.Dock="Bottom" VerticalAlignment="Bottom">
                    <TextBlock Text="Glissez un .exe ou .lnk"
                               Style="{StaticResource SubtitleText}"
                               FontSize="10"
                               TextAlignment="Center"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="v2.0"
                               Style="{StaticResource SubtitleText}"
                               HorizontalAlignment="Center"/>
                </StackPanel>
                <StackPanel/>
            </DockPanel>
        </Border>

        <!-- Main Content -->
        <DockPanel Grid.Column="1">
            <!-- Top Bar -->
            <Border DockPanel.Dock="Top"
                    Background="{StaticResource BackgroundMediumBrush}"
                    BorderBrush="{StaticResource BorderSubtleBrush}"
                    BorderThickness="0,0,0,1"
                    Padding="16,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Category Filter -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,16,0">
                        <TextBlock Text="Categorie:"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>
                        <ComboBox x:Name="CategoryCombo"
                                  ItemsSource="{Binding Categories}"
                                  SelectedItem="{Binding SelectedCategory}"
                                  Width="120"
                                  Background="{StaticResource BackgroundMediumBrush}"
                                  Foreground="{StaticResource TextPrimaryBrush}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="{Binding}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding}" Value="">
                                                        <Setter Property="Text" Value="Toutes"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>

                    <!-- Search Box -->
                    <Grid Grid.Column="1" MaxWidth="350" HorizontalAlignment="Left">
                        <TextBox x:Name="SearchBox"
                                 Style="{StaticResource SearchTextBox}"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBlock Text="Rechercher... (Ctrl+F)"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"
                                   Margin="12,0,0,0"
                                   IsHitTestVisible="False">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding Text, ElementName=SearchBox}" Value=""/>
                                                <Condition Binding="{Binding IsFocused, ElementName=SearchBox}" Value="False"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>

                    <!-- Favorites Toggle -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <ToggleButton Style="{StaticResource FavoriteToggle}"
                                      IsChecked="{Binding ShowFavoritesOnly}"
                                      ToolTip="Afficher uniquement les favoris">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding ShowFavoritesOnly, Converter={StaticResource BoolToStar}}"
                                           FontSize="16"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text=" Favoris"
                                           VerticalAlignment="Center"
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                            </StackPanel>
                        </ToggleButton>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Apps Grid -->
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Padding="8">
                <ItemsControl x:Name="AppsItemsControl" ItemsSource="{Binding FilteredApps}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource AppCard}"
                                    Width="240"
                                    MouseLeftButtonDown="Card_MouseLeftButtonDown"
                                    Tag="{Binding}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Missing Badge -->
                                    <Border Grid.Row="0"
                                            Background="{StaticResource AccentRedBrush}"
                                            CornerRadius="3"
                                            Padding="6,2"
                                            HorizontalAlignment="Left"
                                            Margin="0,0,0,6"
                                            Visibility="{Binding IsExeMissing, Converter={StaticResource BoolToVisibility}}">
                                        <TextBlock Text="Introuvable"
                                                   Foreground="White"
                                                   FontSize="9"
                                                   FontWeight="SemiBold"/>
                                    </Border>

                                    <!-- Header: Icon + Name + Favorite -->
                                    <Grid Grid.Row="1" Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Icon -->
                                        <Border Grid.Column="0"
                                                Width="40"
                                                Height="40"
                                                CornerRadius="6"
                                                Background="{StaticResource BackgroundMediumBrush}"
                                                Margin="0,0,10,0">
                                            <Image Source="{Binding Icon}"
                                                   Width="32"
                                                   Height="32"
                                                   Stretch="Uniform"
                                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                                        </Border>

                                        <!-- Name -->
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding Name}"
                                                   Foreground="{StaticResource TextPrimaryBrush}"
                                                   FontSize="14"
                                                   FontWeight="SemiBold"
                                                   VerticalAlignment="Center"
                                                   TextTrimming="CharacterEllipsis"/>

                                        <!-- Favorite Star -->
                                        <Button Grid.Column="2"
                                                Content="{Binding IsFavorite, Converter={StaticResource BoolToStar}}"
                                                FontSize="18"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Foreground="{StaticResource AccentYellowBrush}"
                                                Cursor="Hand"
                                                Command="{Binding DataContext.ToggleFavoriteCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                ToolTip="Ajouter/Retirer des favoris"/>
                                    </Grid>

                                    <!-- Category -->
                                    <TextBlock Grid.Row="2"
                                               Text="{Binding Category}"
                                               Foreground="{StaticResource AccentBlueBrush}"
                                               FontSize="10"
                                               Margin="0,0,0,4"
                                               Visibility="{Binding Category, Converter={StaticResource StringNotEmptyToVisibility}}"/>

                                    <!-- Tags -->
                                    <ItemsControl Grid.Row="3"
                                                  ItemsSource="{Binding Tags}"
                                                  Margin="0,0,0,8"
                                                  Visibility="{Binding TagsDisplay, Converter={StaticResource StringNotEmptyToVisibility}}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Style="{StaticResource TagChip}">
                                                    <TextBlock Text="{Binding Name}"
                                                               Foreground="{StaticResource TextSecondaryBrush}"
                                                               FontSize="10"/>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <!-- Action Buttons -->
                                    <StackPanel Grid.Row="4"
                                                Orientation="Horizontal"
                                                HorizontalAlignment="Stretch">
                                        <Button Content="Lancer"
                                                Style="{StaticResource PrimaryButton}"
                                                Padding="10,5"
                                                FontSize="11"
                                                IsEnabled="{Binding CanLaunch}"
                                                Command="{Binding DataContext.LaunchAppCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"/>
                                        <Button Content="Modifier"
                                                Style="{StaticResource SmallButton}"
                                                Margin="6,0,0,0"
                                                Command="{Binding DataContext.EditAppCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"/>
                                        <Button Content="x"
                                                Style="{StaticResource DangerButton}"
                                                Margin="6,0,0,0"
                                                FontSize="14"
                                                MinWidth="30"
                                                ToolTip="Supprimer"
                                                Command="{Binding DataContext.DeleteAppCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </DockPanel>
    </Grid>
</Window>
