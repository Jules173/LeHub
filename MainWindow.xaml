<Window x:Class="LeHub.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:LeHub.ViewModels"
        xmlns:converters="clr-namespace:LeHub.Converters"
        mc:Ignorable="d"
        Title="LeHub"
        Height="700"
        Width="1100"
        MinHeight="500"
        MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundDarkBrush}"
        KeyDown="Window_KeyDown"
        AllowDrop="True"
        Drop="Window_Drop"
        DragOver="Window_DragOver">

    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:StringNotEmptyToVisibilityConverter x:Key="StringNotEmptyToVisibility"/>
        <converters:BoolToStarConverter x:Key="BoolToStar"/>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0"
                Background="{StaticResource BackgroundMediumBrush}"
                BorderBrush="{StaticResource BorderSubtleBrush}"
                BorderThickness="0,0,1,0">
            <DockPanel Margin="12">
                <!-- Logo/Title -->
                <StackPanel DockPanel.Dock="Top" Margin="0,0,0,24">
                    <TextBlock Text="LeHub"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                    <TextBlock Text="Application Launcher"
                               Style="{StaticResource SubtitleText}"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Sidebar Actions -->
                <StackPanel DockPanel.Dock="Top">
                    <Button Content="+ Ajouter une appli"
                            Style="{StaticResource SidebarButton}"
                            Command="{Binding AddAppCommand}"/>
                    <Button Content="Gerer les tags"
                            Style="{StaticResource SidebarButton}"
                            Command="{Binding ManageTagsCommand}"/>

                    <Separator Background="{StaticResource BorderSubtleBrush}" Margin="0,12"/>

                    <!-- Presets Section -->
                    <TextBlock Text="PRESETS"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="10"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>
                    <Button Content="+ Nouveau preset"
                            Style="{StaticResource SidebarButton}"
                            Command="{Binding AddPresetCommand}"/>

                    <ItemsControl ItemsSource="{Binding Presets}" Margin="0,8,0,0">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="Transparent"
                                        CornerRadius="4"
                                        Margin="0,2"
                                        Padding="8,6">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Name}"
                                                       Foreground="{StaticResource TextPrimaryBrush}"
                                                       FontSize="12"/>
                                            <TextBlock Text="{Binding AppsDisplay}"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       FontSize="10"
                                                       TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>
                                        <Button Grid.Column="1"
                                                Content="â–¶"
                                                FontSize="10"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Foreground="{StaticResource AccentGreenBrush}"
                                                Cursor="Hand"
                                                Padding="6,2"
                                                ToolTip="Lancer le preset"
                                                Command="{Binding DataContext.LaunchPresetCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"/>
                                        <Button Grid.Column="2"
                                                Content="x"
                                                FontSize="12"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Foreground="{StaticResource AccentRedBrush}"
                                                Cursor="Hand"
                                                Padding="6,2"
                                                ToolTip="Supprimer"
                                                Command="{Binding DataContext.DeletePresetCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <!-- Version -->
                <StackPanel DockPanel.Dock="Bottom" VerticalAlignment="Bottom">
                    <TextBlock Text="Glissez un .exe ou .lnk"
                               Style="{StaticResource SubtitleText}"
                               FontSize="10"
                               TextAlignment="Center"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="v2.2"
                               Style="{StaticResource SubtitleText}"
                               HorizontalAlignment="Center"/>
                </StackPanel>
                <StackPanel/>
            </DockPanel>
        </Border>

        <!-- Main Content -->
        <DockPanel Grid.Column="1">
            <!-- Top Bar -->
            <Border DockPanel.Dock="Top"
                    Background="{StaticResource BackgroundMediumBrush}"
                    BorderBrush="{StaticResource BorderSubtleBrush}"
                    BorderThickness="0,0,0,1"
                    Padding="16,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Search Box (LEFT) -->
                    <Grid Grid.Column="0" Width="300">
                        <TextBox x:Name="SearchBox"
                                 Style="{StaticResource SearchTextBox}"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 Width="300"/>
                        <TextBlock Text="Rechercher... (Ctrl+F)"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"
                                   Margin="12,0,0,0"
                                   IsHitTestVisible="False">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding Text, ElementName=SearchBox}" Value=""/>
                                                <Condition Binding="{Binding IsFocused, ElementName=SearchBox}" Value="False"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>

                    <!-- Filters (RIGHT) -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <!-- Tags Filter -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,16,0">
                            <TextBlock Text="Tags:"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0"/>
                            <ComboBox x:Name="TagsCombo"
                                      ItemsSource="{Binding AllTags}"
                                      SelectedItem="{Binding SelectedTag}"
                                      DisplayMemberPath="Name"
                                      Width="120"/>
                        </StackPanel>

                        <!-- Favorites Toggle -->
                        <ToggleButton Style="{StaticResource FavoriteToggle}"
                                      IsChecked="{Binding ShowFavoritesOnly}"
                                      ToolTip="Afficher uniquement les favoris">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding ShowFavoritesOnly, Converter={StaticResource BoolToStar}}"
                                           FontSize="16"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text=" Favoris"
                                           VerticalAlignment="Center"
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                            </StackPanel>
                        </ToggleButton>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Apps Grid -->
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Padding="8">
                <ItemsControl x:Name="AppsItemsControl" ItemsSource="{Binding FilteredApps}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border x:Name="CardBorder"
                                    Width="240"
                                    Background="{StaticResource CardBackgroundBrush}"
                                    BorderBrush="{StaticResource BorderSubtleBrush}"
                                    BorderThickness="1"
                                    CornerRadius="6"
                                    Padding="12"
                                    Margin="6"
                                    Cursor="Hand"
                                    MouseLeftButtonDown="Card_MouseLeftButtonDown"
                                    MouseRightButtonUp="Card_MouseRightButtonUp"
                                    Tag="{Binding}">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                <Setter Property="BorderBrush" Value="{StaticResource AccentBlueBrush}"/>
                                                <Setter Property="BorderThickness" Value="2"/>
                                                <Setter Property="Background" Value="{StaticResource CardHoverBrush}"/>
                                            </DataTrigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{StaticResource CardHoverBrush}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Favorite Star (top-right, absolute position) -->
                                    <Button Grid.Row="0"
                                            Content="{Binding IsFavorite, Converter={StaticResource BoolToStar}}"
                                            FontSize="18"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Foreground="{StaticResource AccentYellowBrush}"
                                            Cursor="Hand"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Top"
                                            Margin="0,-4,-4,0"
                                            Padding="4"
                                            Command="{Binding DataContext.ToggleFavoriteCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            ToolTip="Ajouter/Retirer des favoris"/>

                                    <!-- Header: Icon + Name + Missing Badge -->
                                    <Grid Grid.Row="0" Margin="0,0,30,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Icon -->
                                        <Border Grid.Column="0"
                                                Width="40"
                                                Height="40"
                                                CornerRadius="6"
                                                Background="{StaticResource BackgroundMediumBrush}"
                                                Margin="0,0,10,0">
                                            <Image Source="{Binding Icon}"
                                                   Width="32"
                                                   Height="32"
                                                   Stretch="Uniform"
                                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                                        </Border>

                                        <!-- Name + Missing badge -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Name}"
                                                       Foreground="{StaticResource TextPrimaryBrush}"
                                                       FontSize="14"
                                                       FontWeight="SemiBold"
                                                       TextTrimming="CharacterEllipsis"/>
                                            <Border Background="{StaticResource AccentRedBrush}"
                                                    CornerRadius="3"
                                                    Padding="4,1"
                                                    HorizontalAlignment="Left"
                                                    Margin="0,2,0,0"
                                                    Visibility="{Binding IsExeMissing, Converter={StaticResource BoolToVisibility}}">
                                                <TextBlock Text="Introuvable"
                                                           Foreground="White"
                                                           FontSize="9"
                                                           FontWeight="SemiBold"/>
                                            </Border>
                                        </StackPanel>
                                    </Grid>

                                    <!-- Tags (limited to 2 + "+N") -->
                                    <ItemsControl Grid.Row="1"
                                                  ItemsSource="{Binding DisplayTags}"
                                                  Margin="0,0,0,8"
                                                  Visibility="{Binding TagsDisplay, Converter={StaticResource StringNotEmptyToVisibility}}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Style="{StaticResource TagChip}">
                                                    <TextBlock Text="{Binding}"
                                                               Foreground="{StaticResource TextSecondaryBrush}"
                                                               FontSize="10"/>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <!-- Spacer -->
                                    <Border Grid.Row="2"/>

                                    <!-- Action Buttons: Lancer | Supprimer | â‹¯ -->
                                    <Grid Grid.Row="3">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Button Grid.Column="0"
                                                Content="Lancer"
                                                Style="{StaticResource PrimaryButton}"
                                                Padding="10,5"
                                                FontSize="11"
                                                IsEnabled="{Binding CanLaunch}"
                                                Command="{Binding DataContext.LaunchAppCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"/>

                                        <Button Grid.Column="1"
                                                Style="{StaticResource DangerButton}"
                                                Padding="8,5"
                                                FontSize="11"
                                                Margin="6,0,0,0"
                                                ToolTip="Supprimer"
                                                Command="{Binding DataContext.DeleteAppCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="ðŸ—‘" FontSize="11"/>
                                            </StackPanel>
                                        </Button>

                                        <Button Grid.Column="3"
                                                Content="â‹¯"
                                                Style="{StaticResource SmallButton}"
                                                FontSize="16"
                                                FontWeight="Bold"
                                                MinWidth="36"
                                                Padding="8,2"
                                                ToolTip="Plus d'options"
                                                Click="MenuButton_Click"
                                                Tag="{Binding}"/>
                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </DockPanel>
    </Grid>
</Window>
